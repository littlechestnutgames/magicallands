{
  "minecraft:block": {
    "description": {
      "identifier": "glc:planted_raspberry",
      "properties": {
        "glc:growth_stage": [0, 1, 2, 3, 4]
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('glc:growth_stage') == 0",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "planted_raspberry_0",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('glc:growth_stage') == 1",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "planted_raspberry_1",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('glc:growth_stage') == 2",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "planted_raspberry_2",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('glc:growth_stage') == 3",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "planted_raspberry_3",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('glc:growth_stage') == 4",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "planted_raspberry_4",
              "render_method": "alpha_test"
            }
          },
          "minecraft:loot": "loot_tables/blocks/planted_raspberry.json"
        }
      }
    ],
    "components": {
      "minecraft:geometry": "geometry.small_plant",
      "minecraft:loot": "loot_tables/blocks/empty.json",
      "minecraft:material_instances": {
        "*": {
          "texture": "planted_raspberry_0",
          "render_method": "alpha_test"
        }
      },
      "minecraft:entity_collision": {
        "origin": [-8, 0, -8],
        "size": [16, 2, 16]
      },
      "minecraft:block_light_absorption": 0,
      "minecraft:block_light_emission": 0,
      "minecraft:pick_collision": {
        "origin": [-2, 0, -2],
        "size": [6, 12, 6]
      },
      "minecraft:unwalkable": true,
      "minecraft:friction": 0.25,
      "minecraft:breakonpush": true,
      "minecraft:flammable": {
        "flame_odds": 0,
        "burn_odds": 0
      },
      "minecraft:random_ticking": {
        "on_tick": {
          "event": "grow_stage"
        }
      },
      "minecraft:on_interact": {
          "target": "other",
          "event": "bonemeal_grow_stage",
          "condition": "query.get_equipped_item_name == 'bone_meal' && query.block_property('glc:growth_stage') < 4"
      },
      "minecraft:placement_filter": {
        "conditions": [{
          "block_filter": [
            "grass",
            "dirt"
          ],
          "allowed_faces": [
            "up"
          ]
        }]
      },
      "minecraft:destroy_time": 0,
      "minecraft:explosion_resistance": 0
    },
    "events": {
      "bonemeal_grow_stage": {
        "sequence": [
          {"swing": {}},
          {"decrement_stack": {}},
          {
            "trigger": {
              "event": "grow_stage",
              "target": "self"
            }
          }
        ]
      },
      "grow_stage": {
        "randomize": [
          { "weight": 1 },
          {
            "weight": 1,
            "set_block_property": {
              "glc:growth_stage": "(query.block_property('glc:growth_stage') < 4) ? query.block_property('glc:growth_stage') + 1 : 4"
            }
          }
        ]
      }
    }
  },
  "format_version": "1.16.0"
}